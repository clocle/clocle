<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="#FFFFFF"
    android:elevation="1dp"
    android:transformPivotX="2dp"
    android:orientation="vertical"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/photodongtai"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@mipmap/ic_launcher" />

        <RelativeLayout
            android:layout_width="0dp"

            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/namedongtai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="无功至人"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/timetext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/namedongtai"
                android:layout_marginTop="3dp"


                android:text="28分钟前  安徽中医药大学"
                android:textColor="#A39E9E"
                android:textSize="8sp" />

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/down" />
        </RelativeLayout>
    </LinearLayout>

    <!--<View
        android:id="@+id/hr"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/photodongtai"
        android:background="#686161" />-->


    <TextView

        android:id="@+id/contextdongtai"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_margin="5dp"
        android:text="111111111111111111111111111111111111111111111111111111" />

    <LinearLayout
        android:id="@+id/pinglun"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

        <TextView
            android:drawableLeft="@mipmap/information"

            android:drawablePadding="10dp"
            android:gravity="left|center_vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="评论" />
        <View
            android:layout_weight="0"
            android:layout_width="1dp"
            android:background="#D2D3D4"
            android:layout_height="wrap_content">

            </View>

        <TextView
            android:drawablePadding="10dp"
            android:drawableLeft="@mipmap/like_2_shape"
            android:gravity="left|center_vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="赞" />
        <View
            android:layout_weight="0"
            android:layout_width="1dp"
            android:background="#D2D3D4"
            android:layout_height="wrap_content"/>
        <TextView
            android:drawablePadding="10dp"
            android:gravity="left|center_vertical"
            android:drawableLeft="@mipmap/shape_shopping"

            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="抢单"
            android:layout_height="match_parent" />
    </LinearLayout>


</LinearLayout>
